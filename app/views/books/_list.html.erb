<h2>New book</h2>
<%= form_with model:book, method: :post  do |f| %>
  <label>Title</label>
  <div class="field">
    <%= f.text_field :title,class:"form-control" %>
  </div>
  <label>Opinion</label>
  <div class="field">
    <%= f.text_area :body,class:"form-control" %><br>
  </div>
  <div class="field">
    <%= f.submit 'Create Book',class:"btn btn-success" %>
  </div>
<% end %>
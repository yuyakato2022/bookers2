
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="form-action">
        <h2>Editing Book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="inputName">Title</label>
            <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"",class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="textarea">Opinion</label>
            <%= f.text_field :body, autofocus: true, id:"textarea", placeholder:"",class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book",class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
        <%= link_to "Show", book_path(@book.id) %>|
        <%= link_to "Back", books_path %>
    </div>
  </div>
</div>

